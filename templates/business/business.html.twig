        }

        .table th {
            font-weight: 600;
            color: #495057;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
        }

        .modal-content {
            border-radius: 12px;
            overflow: hidden;
        }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        let currentBusinessId = null;

        function openAddModal() {
            document.getElementById('modalTitleText').textContent = 'Ajouter Business';
            document.getElementById('submitButtonText').textContent = 'Créer';
            document.getElementById('businessForm').action = "{{ path('business_add') }}";

            // Réinitialiser le formulaire
            const form = document.getElementById('businessForm');
            form.reset();

            // Décocher la case
            const checkbox = document.getElementById('addPhotos');
            if (checkbox) checkbox.checked = false;

            new bootstrap.Modal(document.getElementById('businessModal')).show();
        }

        function openEditModal(id, name, address, phone, website, ownerId, categoryId, description) {
            currentBusinessId = id;

            document.getElementById('modalTitleText').textContent = 'Modifier Business';
            document.getElementById('submitButtonText').textContent = 'Mettre à jour';
            document.getElementById('businessForm').action = '/business/edit/' + id;

            // Remplir les champs
            document.getElementById('name').value = name;
            document.getElementById('address').value = address;
            document.getElementById('phone').value = phone;
            document.getElementById('website').value = website;
            document.getElementById('owner').value = ownerId;
            document.getElementById('category').value = categoryId;
            document.getElementById('description').value = description;

            // Décocher la case
            const checkbox = document.getElementById('addPhotos');
            if (checkbox) checkbox.checked = false;

            new bootstrap.Modal(document.getElementById('businessModal')).show();
        }

        function confirmDelete(id, name) {
            document.getElementById('deleteMessage').innerHTML =
                `Êtes-vous sûr de vouloir supprimer <strong>"${name}"</strong> ?<br><small class="text-danger">Cette action est irréversible.</small>`;

            document.getElementById('confirmDeleteBtn').href = `/business/delete/${id}`;

            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const rows = document.querySelectorAll('.business-row');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });
        }

        // Animation des lignes au survol
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('.business-row');
            rows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateX(4px)';
                    this.style.transition = 'all 0.2s ease';
                });

                row.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateX(0)';
                });

                // Cliquer sur la ligne (sauf les boutons) pour voir les détails
                row.addEventListener('click', function(e) {
                    if (!e.target.closest('button') && !e.target.closest('a')) {
                        // Récupérer l'ID du business (à adapter selon votre structure)
                        const businessId = this.dataset.id;
                        if (businessId) {
                            window.location.href = `/business/${businessId}`;
                        }
                    }
                });
            });

            // Gestion du formulaire
            const businessForm = document.getElementById('businessForm');
            if (businessForm) {
                businessForm.addEventListener('submit', function(e) {
                    const submitBtn = document.getElementById('submitButton');
                    submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Enregistrement...';
                    submitBtn.disabled = true;
                });
            }
        });
    </script>
{% endblock %}