{% extends 'base_client.html.twig' %}

{% block title %}Conversation avec {{ otherUser.name }}{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="card shadow-sm">
            <!-- Header -->
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <a href="{{ path('messages_index') }}" class="btn btn-sm btn-light me-3">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    {% if otherUser.photo %}
                        <img src="{{ asset('uploads/' ~ otherUser.photo) }}"
                             class="rounded-circle me-3"
                             width="40" height="40" alt="{{ otherUser.name }}">
                    {% else %}
                        <div class="bg-light text-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 40px; height: 40px;">
                            {{ otherUser.name|first|upper }}
                        </div>
                    {% endif %}
                    <div>
                        <h5 class="mb-0">{{ otherUser.name }}</h5>
                        <small>
                            {% if otherUser.role == 'SERVICE_OWNER' %}
                                <i class="bi bi-shop me-1"></i>Propriétaire
                            {% elseif otherUser.role == 'ADMIN' %}
                                <i class="bi bi-shield-check me-1"></i>Admin
                            {% else %}
                                <i class="bi bi-person me-1"></i>Client
                            {% endif %}
                        </small>
                    </div>
                </div>
            </div>

            <!-- Messages -->
            <div class="card-body" id="messagesContainer" style="height: 500px; overflow-y: auto;">
                {% for message in messages %}
                    <div class="message-item mb-3 {{ message.sender == app.user ? 'text-end' : '' }}">
                        <div class="d-inline-block" style="max-width: 70%;">
                            <div class="p-3 rounded {{ message.sender == app.user ? 'bg-primary text-white' : 'bg-light' }}">
                                {{ message.content }}
                            </div>
                            <small class="text-muted d-block mt-1">
                                {{ message.sentAt|date('d/m/Y H:i') }}
                                {% if message.sender == app.user and message.isRead %}
                                    <i class="bi bi-check-all text-primary"></i>
                                {% endif %}
                            </small>
                        </div>
                    </div>
                {% else %}
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                        <p class="mt-3">Aucun message pour le moment</p>
                        <p>Commencez la conversation !</p>
                    </div>
                {% endfor %}
            </div>

            <!-- Formulaire d'envoi -->
            <div class="card-footer bg-white">
                <form id="messageForm" class="d-flex gap-2">
                    <input type="text"
                           id="messageContent"
                           class="form-control"
                           placeholder="Écrivez votre message..."
                           required>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const messagesContainer = document.getElementById('messagesContainer');
            const messageForm = document.getElementById('messageForm');
            const messageContent = document.getElementById('messageContent');

            // Scroller vers le bas au chargement
            messagesContainer.scrollTop = messagesContainer.scrollHeight;

            // Gestion de l'envoi du message
            messageForm.addEventListener('submit', async function(e) {
                e.preventDefault();

                const content = messageContent.value.trim();
                if (!content) return;

                try {
                    const response = await fetch('{{ path('messages_send', {id: otherUser.id}) }}', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: 'content=' + encodeURIComponent(content)
                    });

                    const data = await response.json();

                    if (data.success) {
                        // Ajouter le message à l'interface
                        const messageDiv = document.createElement('div');
                        messageDiv.className = 'message-item mb-3 text-end';
                        messageDiv.innerHTML = `
                        <div class="d-inline-block" style="max-width: 70%;">
                            <div class="p-3 rounded bg-primary text-white">
                                ${content}
                            </div>
                            <small class="text-muted d-block mt-1">
                                À l'instant
                            </small>
                        </div>
                    `;
                        messagesContainer.appendChild(messageDiv);

                        // Scroller vers le bas
                        messagesContainer.scrollTop = messagesContainer.scrollHeight;

                        // Réinitialiser le formulaire
                        messageContent.value = '';

                        // Rafraîchir les messages après envoi
                        fetchNewMessages();
                    } else {
                        alert('Erreur lors de l\'envoi du message');
                    }
                } catch (error) {
                    console.error('Erreur:', error);
                    alert('Erreur lors de l\'envoi du message');
                }
            });

            // Fonction pour récupérer les nouveaux messages
            async function fetchNewMessages() {
                try {
                    const response = await fetch('{{ path('messages_conversation', {id: otherUser.id}) }}');
                    const text = await response.text();

                    // Créer un DOM temporaire pour extraire les messages
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(text, 'text/html');
                    const newMessagesContainer = doc.getElementById('messagesContainer');

                    if (newMessagesContainer) {
                        // Remplacer le contenu des messages
                        messagesContainer.innerHTML = newMessagesContainer.innerHTML;

                        // Scroller vers le bas
                        messagesContainer.scrollTop = messagesContainer.scrollHeight;
                    }
                } catch (error) {
                    console.error('Erreur lors du rafraîchissement des messages:', error);
                }
            }

            // Rafraîchir les messages toutes les 10 secondes (sans recharger la page)
            setInterval(fetchNewMessages, 10000);
        });
    </script>
    <style>
        .message-item {
            animation: fadeIn 0.3s ease-in;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
{% endblock %}