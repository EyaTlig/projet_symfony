{% extends 'base_client.html.twig' %}

{% block title %}Mes Messages{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row">
            <!-- Liste des conversations -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-chat-dots me-2"></i>Messages
                        </h5>
                        {% if unreadTotal > 0 %}
                            <span class="badge bg-danger">{{ unreadTotal }}</span>
                        {% endif %}
                    </div>

                    <div class="list-group list-group-flush" style="max-height: 600px; overflow-y: auto;">
                        <!-- Nouvelle conversation -->
                        <button class="list-group-item list-group-item-action"
                                data-bs-toggle="modal"
                                data-bs-target="#newConversationModal">
                            <i class="bi bi-plus-circle me-2 text-primary"></i>
                            <strong>Nouvelle conversation</strong>
                        </button>

                        <!-- Conversations existantes -->
                        {% for conv in conversations %}
                            <a href="{{ path('messages_conversation', {id: conv.user.id}) }}"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3">
                                        {% if conv.user.photo %}
                                            <img src="{{ asset('uploads/' ~ conv.user.photo) }}"
                                                 class="rounded-circle"
                                                 width="40" height="40" alt="{{ conv.user.name }}">
                                        {% else %}
                                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                                                 style="width: 40px; height: 40px;">
                                                {{ conv.user.name|first|upper }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between">
                                            <strong>{{ conv.user.name }}</strong>
                                            <small class="text-muted">
                                                {{ conv.lastMessageDate|date('d/m H:i') }}
                                            </small>
                                        </div>
                                        <small class="text-muted">
                                            {% if conv.user.role == 'SERVICE_OWNER' %}
                                                <i class="bi bi-shop me-1"></i>Propriétaire
                                            {% elseif conv.user.role == 'ADMIN' %}
                                                <i class="bi bi-shield-check me-1"></i>Admin
                                            {% else %}
                                                <i class="bi bi-person me-1"></i>Client
                                            {% endif %}
                                        </small>
                                        {% if conv.unreadCount > 0 %}
                                            <span class="badge bg-danger rounded-pill float-end">
                                            {{ conv.unreadCount }}
                                        </span>
                                        {% endif %}
                                    </div>
                                </div>
                            </a>
                        {% else %}
                            <div class="list-group-item text-center py-5">
                                <i class="bi bi-chat-dots text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3">Aucune conversation</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Zone de conversation (placeholder) -->
            <div class="col-md-8">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center justify-content-center text-center">
                        <div>
                            <i class="bi bi-chat-square-text text-muted" style="font-size: 5rem;"></i>
                            <h4 class="mt-3 text-muted">Sélectionnez une conversation</h4>
                            <p class="text-muted">ou démarrez une nouvelle conversation</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Nouvelle Conversation -->
    <div class="modal fade" id="newConversationModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-plus-circle me-2"></i>Nouvelle conversation
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <label class="form-label">Sélectionner un contact</label>
                    <div class="list-group">
                        {% for contact in availableContacts %}
                            {% if contact.id != app.user.id %}
                                <a href="{{ path('messages_conversation', {id: contact.id}) }}"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex align-items-center">
                                        {% if contact.photo %}
                                            <img src="{{ asset('uploads/' ~ contact.photo) }}"
                                                 class="rounded-circle me-3"
                                                 width="40" height="40" alt="{{ contact.name }}">
                                        {% else %}
                                            <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                                                 style="width: 40px; height: 40px;">
                                                {{ contact.name|first|upper }}
                                            </div>
                                        {% endif %}
                                        <div>
                                            <strong>{{ contact.name }}</strong>
                                            <br>
                                            <small class="text-muted">
                                                {% if contact.role == 'SERVICE_OWNER' %}
                                                    <i class="bi bi-shop me-1"></i>Propriétaire
                                                {% elseif contact.role == 'ADMIN' %}
                                                    <i class="bi bi-shield-check me-1"></i>Admin
                                                {% else %}
                                                    <i class="bi bi-person me-1"></i>Client
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                </a>
                            {% endif %}
                        {% else %}
                            <div class="alert alert-info">
                                Aucun contact disponible.
                                {% if app.user.role == 'CUSTOMER' %}
                                    Abonnez-vous à des propriétaires pour pouvoir leur envoyer des messages.
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
        }

        .list-group-item:hover {
            background-color: #f8f9fa;
        }
    </style>
{% endblock %}