{% extends 'base.html.twig' %}

{% block title %}Mes Notifications{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Mes Notifications</h1>

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Toutes les notifications</h5>
                {% if notifications|length > 0 %}
                    <form action="{{ path('notification_mark_all_read') }}" method="POST">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="bi bi-check-all"></i> Tout marquer comme lu
                        </button>
                    </form>
                {% endif %}
            </div>
            <div class="card-body">
                {% if notifications|length > 0 %}
                    {% for notification in notifications %}
                        <div class="notification-item mb-3 p-3 border rounded {{ notification.isRead ? 'bg-light' : 'bg-light-blue' }}">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <span class="badge bg-{{ notification.type }} mb-2">{{ notification.type }}</span>
                                    <h6 class="mb-1">{{ notification.title }}</h6>
                                    <p class="mb-1">{{ notification.message }}</p>
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> {{ notification.createdAt|date('d/m/Y H:i') }}
                                    </small>
                                </div>
                                <div class="d-flex flex-column">
                                    {% if not notification.isRead %}
                                        <form action="{{ path('notification_mark_read', {id: notification.id}) }}" method="POST" class="mb-2">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="bi bi-check"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form action="{{ path('notification_delete', {id: notification.id}) }}" method="POST"
                                          onsubmit="return confirm('Supprimer cette notification ?')">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-bell-slash fs-1 text-muted"></i>
                        <p class="text-muted mt-3">Aucune notification</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}