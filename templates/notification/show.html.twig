{% extends 'base.html.twig' %}

{% block title %}{{ notification.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <a href="{{ path('notifications_page') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>

                    <div>
                    <span class="badge bg-{{ notification.isRead ? 'success' : 'warning' }} me-2">
                        {{ notification.isRead ? 'Lue' : 'Nouvelle' }}
                    </span>
                        <span class="badge bg-{{ notification.type|lower }}">
                        {{ notification.type }}
                    </span>
                    </div>
                </div>

                <div class="card shadow">
                    <div class="card-header bg-light">
                        <h3 class="card-title mb-0">{{ notification.title }}</h3>
                    </div>

                    <div class="card-body">
                        <div class="mb-4">
                            <p class="lead">{{ notification.message }}</p>
                        </div>

                        <div class="border-top pt-3 mt-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <p>
                                        <i class="bi bi-person text-primary"></i>
                                        <strong>Destinataire :</strong>
                                        {{ notification.user.name }}
                                    </p>
                                    <p>
                                        <i class="bi bi-calendar text-primary"></i>
                                        <strong>Date :</strong>
                                        {{ notification.createdAt|date('d/m/Y Ã  H:i') }}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between">
                            {% if not notification.isRead %}
                                <form action="{{ path('notification_mark_read', {id: notification.id}) }}"
                                      method="POST">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check"></i> Marquer comme lue
                                    </button>
                                </form>
                            {% else %}
                                <form action="{{ path('notification_mark_unread', {id: notification.id}) }}"
                                      method="POST">
                                    <button type="submit" class="btn btn-secondary">
                                        <i class="bi bi-arrow-counterclockwise"></i> Marquer comme non lue
                                    </button>
                                </form>
                            {% endif %}

                            <form action="{{ path('notification_delete', {id: notification.id}) }}"
                                  method="POST"
                                  onsubmit="return confirm('Supprimer cette notification ?');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}