{% extends 'base.html.twig' %}

{% block title %}Galerie des Photos d'Avis - Administration{% endblock %}

{% block body %}
    <div class="container-fluid px-4">
        <!-- Header avec titre et actions -->
        <div class="d-flex justify-content-between align-items-center py-4">
            <div>
                <h1 class="h2 mb-1 fw-bold">Photos des Avis</h1>
                <p class="text-muted mb-0">Gestion des images partagées par les utilisateurs dans leurs avis</p>
            </div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPhotoModal">
                <i class="fa fa-plus-circle me-2"></i>Nouvelle photo
            </button>
        </div>



        <!-- Filtres et recherche -->
        <div class="card border-0 shadow-sm rounded-3 mb-4">
            <div class="card-header bg-white border-0 py-3">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="fa fa-search text-muted"></i>
                        </span>
                            <input type="text" class="form-control border-start-0" id="searchInput"
                                   placeholder="Rechercher par utilisateur, business, avis...">
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end mt-2 mt-md-0">
                        <div class="btn-group" role="group">


                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="toggleView()" id="viewToggle">
                                <i class="fa fa-th-large me-1"></i>Grille
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Vue grille -->
        <div class="row" id="gridView">
            {% for photo in photos %}
                <div class="col-xl-3 col-lg-4 col-md-6 mb-4 photo-item"
                     data-review-id="{{ photo.review.id }}"
                     data-user-name="{{ photo.user.name|lower }}"
                     data-business-name="{{ photo.review.business.name|lower }}">
                    <div class="card border-0 shadow-sm h-100 photo-card">
                        <div class="card-img-top position-relative overflow-hidden" style="height: 200px;">
                            <img src="{{ asset('uploads/review_photos/' ~ photo.url) }}"
                                 class="w-100 h-100 object-fit-cover"
                                 alt="Photo de l'avis #{{ photo.review.id }}"
                                 onerror="this.src='https://via.placeholder.com/400x300/eee/ccc?text=Image+non+disponible'">
                            <div class="position-absolute top-0 end-0 m-2">
                        <span class="badge bg-dark bg-opacity-75">
                            <i class="fa fa-image me-1"></i>{{ photo.url|split('.')|last|upper }}
                        </span>
                            </div>
                            <div class="position-absolute bottom-0 start-0 w-100 p-2 bg-dark bg-opacity-50 text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small>
                                        <i class="fa fa-user me-1"></i>{{ photo.user.name }}
                                    </small>
                                    <small>
                                        <i class="fa fa-star text-warning me-1"></i>{{ photo.review.rating }}/5
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="review-info">
                                    <h6 class="card-title mb-1">Avis #{{ photo.review.id }}</h6>
                                    <small class="text-muted">
                                        <i class="fa fa-store me-1"></i>{{ photo.review.business.name }}
                                    </small>
                                </div>

                            </div>

                            <p class="card-text small text-muted mb-3">
                                {{ photo.review.comment|slice(0, 80) }}{% if photo.review.comment|length > 80 %}...{% endif %}
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="rating-display">
                                    {% for i in 1..5 %}
                                        {% if i <= photo.review.rating %}
                                            <i class="fa fa-star text-warning" style="font-size: 12px;"></i>
                                        {% else %}
                                            <i class="fa fa-star-o text-warning" style="font-size: 12px;"></i>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                <div class="btn-group btn-group-sm">

                                    <button type="button" class="btn btn-outline-primary"
                                            onclick="editPhoto({{ photo.id }}, {{ photo.review.id }}, {{ photo.user.id }})"
                                            title="Modifier">
                                        <i class="fa fa-edit"></i>
                                    </button>
                                    <a href="{{ path('review_photo_delete', {'id': photo.id}) }}"
                                       class="btn btn-outline-danger"
                                       onclick="return confirmDeletePhoto('{{ photo.user.name|e('js') }}', '{{ photo.review.business.name|e('js') }}')"
                                       title="Supprimer">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="text-center py-5">
                        <div class="icon-wrapper-lg bg-light rounded-circle mb-3 mx-auto">
                            <i class="fa fa-camera fa-2x text-muted"></i>
                        </div>
                        <h5 class="mb-2">Aucune photo d'avis disponible</h5>
                        <p class="text-muted mb-3">Les utilisateurs n'ont pas encore partagé de photos avec leurs avis</p>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addPhotoModal">
                            <i class="fa fa-plus-circle me-2"></i>Ajouter une photo
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Vue tableau (cachée par défaut) -->
        <div class="card border-0 shadow-sm rounded-3 d-none" id="tableView">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th class="ps-4">Photo</th>
                            <th>Avis</th>
                            <th>Utilisateur</th>
                            <th>Business</th>
                            <th>Note</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for photo in photos %}
                            <tr class="photo-row" data-review-id="{{ photo.review.id }}">
                                <td class="ps-4">
                                    <div class="avatar-table">
                                        <img src="{{ asset('uploads/review_photos/' ~ photo.url) }}"
                                             class="rounded" width="60" height="60"
                                             alt="Photo de {{ photo.user.name }}"
                                             onerror="this.src='https://via.placeholder.com/60x60/eee/ccc?text=Image'">
                                    </div>
                                </td>
                                <td>
                                    <strong>Avis #{{ photo.review.id }}</strong><br>
                                    <small class="text-muted">{{ photo.review.comment|slice(0, 30) }}...</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm me-2">
                                            {% if photo.user.photo %}
                                                <img src="{{ asset('uploads/' ~ photo.user.photo) }}"
                                                     class="rounded-circle" width="30" height="30"
                                                     alt="{{ photo.user.name }}">
                                            {% else %}
                                                <div class="avatar-placeholder rounded-circle d-flex align-items-center justify-content-center"
                                                     style="width: 30px; height: 30px; background-color: #e9ecef; color: #6c757d;">
                                                    {{ photo.user.name|first|upper }}
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div>
                                            <strong>{{ photo.user.name }}</strong><br>
                                            <small class="text-muted">{{ photo.user.email|slice(0, 15) }}...</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <strong>{{ photo.review.business.name }}</strong><br>
                                    <small class="text-muted">{{ photo.review.business.category.name }}</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="me-2">
                                            {% for i in 1..5 %}
                                                {% if i <= photo.review.rating %}
                                                    <i class="fa fa-star text-warning" style="font-size: 12px;"></i>
                                                {% else %}
                                                    <i class="fa fa-star-o text-warning" style="font-size: 12px;"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                        <span class="badge bg-warning bg-opacity-10 text-warning">
                                        {{ photo.review.rating }}/5
                                    </span>
                                    </div>
                                </td>

                                <td class="text-end pe-4">
                                    <div class="btn-group btn-group-sm">

                                        <button type="button" class="btn btn-outline-primary"
                                                onclick="editPhoto({{ photo.id }}, {{ photo.review.id }}, {{ photo.user.id }})">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                        <a href="{{ path('review_photo_delete', {'id': photo.id}) }}"
                                           class="btn btn-outline-danger"
                                           onclick="return confirmDeletePhoto('{{ photo.user.name|e('js') }}', '{{ photo.review.business.name|e('js') }}')">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        {% if photos|length > 0 %}
            <div class="d-flex justify-content-between align-items-center mt-4">
                <div>
            <span class="text-muted">
                Affichage de 1 à {{ photos|length }} sur {{ photos|length }} photos
            </span>
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#">
                                <i class="fa fa-chevron-left"></i>
                            </a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="fa fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        {% endif %}
    </div>

    <!-- Modal Ajout -->
    <div class="modal fade" id="addPhotoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content border-0 shadow-lg">
                <form method="POST" enctype="multipart/form-data" id="photoForm">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title">
                            <i class="fa fa-camera me-2"></i>Ajouter une photo d'avis
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="review" class="form-label fw-semibold">Avis *</label>
                                <select class="form-control select2-style" id="review" name="review" required>
                                    <option value="">Sélectionner un avis</option>
                                    {% for review in reviews %}
                                        <option value="{{ review.id }}">
                                            Avis #{{ review.id }} - {{ review.user.name }} pour {{ review.business.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                                <div class="form-text text-muted">
                                    Sélectionnez l'avis associé à cette photo
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="user" class="form-label fw-semibold">Utilisateur *</label>
                                <select class="form-control select2-style" id="user" name="user" required>
                                    <option value="">Sélectionner un utilisateur</option>
                                    {% for user in users %}
                                        <option value="{{ user.id }}">{{ user.name }} ({{ user.email }})</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="col-12">
                                <label for="photo" class="form-label fw-semibold">Photo *</label>
                                <div class="file-upload-area border rounded p-4 text-center">
                                    <div class="mb-3">
                                        <i class="fa fa-cloud-upload fa-3x text-muted"></i>
                                    </div>
                                    <input type="file" class="form-control d-none" id="photo" name="photo"
                                           accept="image/*" required onchange="previewUploadedPhoto(event)">
                                    <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('photo').click()">
                                        <i class="fa fa-folder-open me-2"></i>Choisir un fichier
                                    </button>
                                    <div class="form-text mt-2">
                                        Formats acceptés: JPG, PNG, GIF (max 5MB)
                                    </div>
                                    <div id="uploadPreview" class="mt-3 d-none">
                                        <img id="uploadedPreview" class="img-thumbnail" style="max-height: 150px;">
                                        <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="clearUploadPreview()">
                                            <i class="fa fa-times me-1"></i>Supprimer
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="card border mt-3">
                                    <div class="card-body">
                                        <h6 class="card-subtitle mb-3 text-muted">Informations de l'avis sélectionné</h6>
                                        <div id="reviewInfo" class="d-none">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <small class="text-muted d-block">Business:</small>
                                                    <strong id="selectedBusiness">-</strong>
                                                </div>
                                                <div class="col-md-6">
                                                    <small class="text-muted d-block">Note:</small>
                                                    <div id="selectedRating">-</div>
                                                </div>
                                                <div class="col-12 mt-2">
                                                    <small class="text-muted d-block">Commentaire:</small>
                                                    <p class="mb-0 small" id="selectedComment">-</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="noReviewInfo" class="text-center text-muted">
                                            <i class="fa fa-info-circle me-2"></i>Sélectionnez un avis pour voir les détails
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="fa fa-times me-2"></i>Annuler
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save me-2"></i>Ajouter la photo
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal de prévisualisation -->
    <div class="modal fade" id="previewModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="previewTitle">Prévisualisation de l'image</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body p-0 text-center">
                    <img id="previewImage" src="" class="img-fluid" alt="Prévisualisation">
                </div>
                <div class="modal-footer bg-dark text-white">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">
                        <i class="fa fa-times me-2"></i>Fermer
                    </button>
                    <a href="#" class="btn btn-primary" id="downloadBtn">
                        <i class="fa fa-download me-2"></i>Télécharger
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de modification -->
    <div class="modal fade" id="editPhotoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content border-0 shadow-lg">
                <form method="POST" action="{{ path('review_photo_edit') }}" enctype="multipart/form-data" id="editPhotoForm">                    <input type="hidden" id="editPhotoId" name="id">
                    <div class="modal-header bg-light">
                        <h5 class="modal-title">
                            <i class="fa fa-edit me-2"></i>Modifier la photo
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body p-4">
                        <div class="mb-3">
                            <label for="editReview" class="form-label fw-semibold">Avis</label>
                            <select class="form-control" id="editReview" name="review" required>
                                <option value="">Sélectionner un avis</option>
                                {% for review in reviews %}
                                    <option value="{{ review.id }}">
                                        Avis #{{ review.id }} - {{ review.user.name }} pour {{ review.business.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="editUser" class="form-label fw-semibold">Utilisateur</label>
                            <select class="form-control" id="editUser" name="user" required>
                                <option value="">Sélectionner un utilisateur</option>
                                {% for user in users %}
                                    <option value="{{ user.id }}">{{ user.name }} ({{ user.email }})</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="editPhoto" class="form-label fw-semibold">Nouvelle photo (optionnel)</label>
                            <input type="file" class="form-control" id="editPhoto" name="photo" accept="image/*">
                            <div class="form-text">
                                Laissez vide pour conserver la photo actuelle
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                            <i class="fa fa-times me-2"></i>Annuler
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save me-2"></i>Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

