{% block javascripts %}
    <script>
        let currentView = 'grid';
        let selectedReview = 'all';

        function toggleView() {
            const gridView = document.getElementById('gridView');
            const tableView = document.getElementById('tableView');
            const viewToggle = document.getElementById('viewToggle');

            if (currentView === 'grid') {
                gridView.classList.add('d-none');
                tableView.classList.remove('d-none');
                viewToggle.innerHTML = '<i class="fa fa-list me-1"></i>Tableau';
                currentView = 'table';
            } else {
                gridView.classList.remove('d-none');
                tableView.classList.add('d-none');
                viewToggle.innerHTML = '<i class="fa fa-th-large me-1"></i>Grille';
                currentView = 'grid';
            }
        }

        function filterByReview(reviewId) {
            selectedReview = reviewId;
            const photoItems = document.querySelectorAll('.photo-item, .photo-row');

            photoItems.forEach(item => {
                if (reviewId === 'all' || item.dataset.reviewId == reviewId) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        function previewPhoto(imageUrl, userName, businessName) {
            document.getElementById('previewImage').src = imageUrl;
            document.getElementById('previewTitle').textContent = `Photo de ${userName} pour ${businessName}`;
            document.getElementById('downloadBtn').href = imageUrl;
            document.getElementById('downloadBtn').download = imageUrl.split('/').pop();

            const previewModal = new bootstrap.Modal(document.getElementById('previewModal'));
            previewModal.show();
        }

        function editPhoto(photoId, reviewId, userId) {
            document.getElementById('editPhotoId').value = photoId;
            document.getElementById('editReview').value = reviewId;
            document.getElementById('editUser').value = userId;

            const editModal = new bootstrap.Modal(document.getElementById('editPhotoModal'));
            editModal.show();
        }

        function confirmDeletePhoto(userName, businessName) {
            return confirm(`Êtes-vous sûr de vouloir supprimer la photo de ${userName} pour ${businessName} ?\n\nCette action est irréversible.`);
        }

        function previewUploadedPhoto(event) {
            const file = event.target.files[0];
            const preview = document.getElementById('uploadPreview');
            const img = document.getElementById('uploadedPreview');

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    img.src = e.target.result;
                    preview.classList.remove('d-none');
                }
                reader.readAsDataURL(file);
            }
        }

        function clearUploadPreview() {
            document.getElementById('photo').value = '';
            document.getElementById('uploadPreview').classList.add('d-none');
            document.getElementById('uploadedPreview').src = '';
        }

        // Gestion du formulaire d'ajout
        document.addEventListener('DOMContentLoaded', function() {
            // Recherche en temps réel
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase();
                    const photoItems = document.querySelectorAll('.photo-item');

                    photoItems.forEach(item => {
                        const userName = item.dataset.userName.toLowerCase();
                        const businessName = item.dataset.businessName.toLowerCase();
                        const text = item.textContent.toLowerCase();

                        const shouldShow = (selectedReview === 'all' || item.dataset.reviewId == selectedReview) &&
                            (userName.includes(searchTerm) || businessName.includes(searchTerm) || text.includes(searchTerm));

                        item.style.display = shouldShow ? '' : 'none';
                    });
                });
            }

            // Mettre à jour les infos de l'avis sélectionné
            const reviewSelect = document.getElementById('review');
            if (reviewSelect) {
                reviewSelect.addEventListener('change', function() {
                    const reviewInfo = document.getElementById('reviewInfo');
                    const noReviewInfo = document.getElementById('noReviewInfo');

                    if (this.value) {
                        reviewInfo.classList.remove('d-none');
                        noReviewInfo.classList.add('d-none');
                        // Ici, vous pourriez faire un appel AJAX pour récupérer les détails de l'avis
                        // Pour l'instant, on affiche des infos basiques
                        const selectedOption = this.options[this.selectedIndex];
                        const text = selectedOption.text.split(' - ');
                        if (text.length > 1) {
                            document.getElementById('selectedBusiness').textContent = text[1].split(' pour ')[1] || '-';
                        }
                    } else {
                        reviewInfo.classList.add('d-none');
                        noReviewInfo.classList.remove('d-none');
                    }
                });
            }

            // Validation du formulaire
            const photoForm = document.getElementById('photoForm');
            if (photoForm) {
                photoForm.addEventListener('submit', function(e) {
                    const fileInput = document.getElementById('photo');
                    if (fileInput.files.length === 0) {
                        e.preventDefault();
                        alert('Veuillez sélectionner une photo.');
                        return;
                    }

                    const file = fileInput.files[0];
                    if (file.size > 5 * 1024 * 1024) { // 5MB
                        e.preventDefault();
                        alert('La photo ne doit pas dépasser 5MB.');
                        return;
                    }

                    if (!['image/jpeg', 'image/png', 'image/gif'].includes(file.type)) {
                        e.preventDefault();
                        alert('Format de fichier non supporté. Utilisez JPG, PNG ou GIF.');
                        return;
                    }
                });
            }

            // Animation des cartes
            const cards = document.querySelectorAll('.photo-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.05}s`;
            });

            // Initialiser le filtre
            filterByReview('all');
        });
    </script>
