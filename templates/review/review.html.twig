{% block javascripts %}
    <script>
        let currentReviewId = null;
        let photosOnly = false;
        let currentRatingFilter = 'all';

        function editReview(id, userId, businessId, content, rating) {
            currentReviewId = id;

            document.getElementById('reviewForm').action = "{{ path('review_edit', {'id': 0}) }}".replace('0', id);
            document.getElementById('modalTitleText').textContent = 'Modifier l\'avis';
            document.getElementById('submitButtonText').textContent = 'Enregistrer';
            document.getElementById('reviewId').value = id;
            document.getElementById('reviewUser').value = userId;
            document.getElementById('reviewBusiness').value = businessId;
            document.getElementById('reviewContent').value = content;
            document.getElementById('reviewRating').value = rating;

            // Mettre à jour les étoiles
            setRatingStars(rating);
        }

        function resetForm() {
            currentReviewId = null;

            document.getElementById('reviewForm').action = "{{ path('add_review') }}";
            document.getElementById('modalTitleText').textContent = 'Ajouter un avis';
            document.getElementById('submitButtonText').textContent = 'Ajouter l\'avis';
            document.getElementById('reviewForm').reset();
            document.getElementById('reviewId').value = '';

            // Réinitialiser les étoiles à 5
            setRatingStars(5);
        }

        function setRatingStars(rating) {
            const stars = document.querySelectorAll('.star-wrapper');
            const ratingInput = document.getElementById('reviewRating');
            const ratingValue = document.getElementById('ratingValue');

            // Mettre à jour les étoiles du formulaire
            stars.forEach((star, index) => {
                const starIndex = index + 1;
                const starIcon = star.querySelector('.star-icon');

                if (starIndex <= rating) {
                    star.classList.add('active');
                    starIcon.classList.remove('fa-star-o');
                    starIcon.classList.add('fa-star');
                } else {
                    star.classList.remove('active');
                    starIcon.classList.remove('fa-star');
                    starIcon.classList.add('fa-star-o');
                }
            });

            ratingInput.value = rating;
            ratingValue.textContent = `${rating}/5 étoiles`;
        }

        function confirmDelete(id, userName, businessName) {
            document.getElementById('deleteMessage').innerHTML =
                `Êtes-vous sûr de vouloir supprimer l'avis de <strong>${userName}</strong>
         pour <strong>${businessName}</strong> ?<br>
         <small class="text-danger">Cette action est irréversible.</small>`;

            document.getElementById('confirmDeleteBtn').href = `/review/delete/${id}`;

            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const rows = document.querySelectorAll('.review-row');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                const rating = parseInt(row.dataset.rating);
                const hasPhotos = row.dataset.hasPhotos === 'true';

                let shouldShow = text.includes(filter);

                // Appliquer les filtres supplémentaires
                if (currentRatingFilter !== 'all') {
                    // CORRECTION : Gérer les filtres exacts et "et plus"
                    if (typeof currentRatingFilter === 'string' && currentRatingFilter.endsWith('+')) {
                        // Filtre "et plus" (ex: "4+" = 4 étoiles et plus)
                        const minRating = parseInt(currentRatingFilter);
                        shouldShow = shouldShow && rating >= minRating;
                    } else {
                        // Filtre exact (ex: 4 = exactement 4 étoiles)
                        const exactRating = parseInt(currentRatingFilter);
                        shouldShow = shouldShow && rating === exactRating;
                    }
                }

                if (photosOnly) {
                    shouldShow = shouldShow && hasPhotos;
                }

                row.style.display = shouldShow ? '' : 'none';
            });
        }

        function filterByRating(rating) {
            currentRatingFilter = rating;

            // Mettre à jour le texte du bouton filtre
            const filterBtn = document.querySelector('[data-bs-toggle="dropdown"]');
            if (rating === 'all') {
                filterBtn.innerHTML = '<i class="fa fa-filter me-1"></i>Toutes les notes';
            } else if (typeof rating === 'string' && rating.endsWith('+')) {
                const ratingNum = rating.replace('+', '');
                filterBtn.innerHTML = `<i class="fa fa-filter me-1"></i>${ratingNum}+ étoiles`;
            } else {
                filterBtn.innerHTML = `<i class="fa fa-filter me-1"></i>${rating} étoiles`;
            }

            filterTable();
        }

        function togglePhotosOnly() {
            photosOnly = !photosOnly;
            const btn = document.getElementById('photosFilterBtn');

            if (photosOnly) {
                btn.classList.add('active');
                btn.innerHTML = '<i class="fa fa-camera me-1"></i>Avec photos ✓';
            } else {
                btn.classList.remove('active');
                btn.innerHTML = '<i class="fa fa-camera me-1"></i>Avec photos';
            }

            filterTable();
        }

        function updatePreview() {
            const content = document.getElementById('reviewContent').value;

            // Mettre à jour le compteur de caractères
            const charCount = document.getElementById('charCount');
            charCount.textContent = `${content.length}/500`;
            if (content.length > 500) {
                charCount.classList.add('text-danger');
                document.getElementById('reviewContent').classList.add('is-invalid');
            } else {
                charCount.classList.remove('text-danger');
                document.getElementById('reviewContent').classList.remove('is-invalid');
            }
        }

        // Gestion du formulaire
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser les étoiles
            const stars = document.querySelectorAll('.star-wrapper');
            stars.forEach((star, index) => {
                star.addEventListener('click', () => {
                    setRatingStars(index + 1);
                });

                star.addEventListener('mouseenter', () => {
                    const tempRating = index + 1;
                    const starIcons = document.querySelectorAll('.star-wrapper .star-icon');

                    starIcons.forEach((icon, iconIndex) => {
                        if (iconIndex <= index) {
                            icon.classList.remove('fa-star-o');
                            icon.classList.add('fa-star');
                        } else {
                            icon.classList.remove('fa-star');
                            icon.classList.add('fa-star-o');
                        }
                    });
                });

                star.addEventListener('mouseleave', () => {
                    const currentRating = parseInt(document.getElementById('reviewRating').value);
                    setRatingStars(currentRating);
                });
            });

            // Mettre à jour la prévisualisation en temps réel
            const contentInput = document.getElementById('reviewContent');
            if (contentInput) {
                contentInput.addEventListener('input', updatePreview);
            }

            // Gestion de la soumission du formulaire
            const reviewForm = document.getElementById('reviewForm');
            if (reviewForm) {
                reviewForm.addEventListener('submit', function(e) {
                    const content = document.getElementById('reviewContent').value.trim();
                    const rating = document.getElementById('reviewRating').value;

                    if (content.length < 10) {
                        e.preventDefault();
                        alert('Le commentaire doit contenir au moins 10 caractères.');
                        return;
                    }

                    if (content.length > 500) {
                        e.preventDefault();
                        alert('Le commentaire ne doit pas dépasser 500 caractères.');
                        return;
                    }

                    if (!rating || rating < 1 || rating > 5) {
                        e.preventDefault();
                        alert('Veuillez sélectionner une note valide entre 1 et 5.');
                        return;
                    }

                    const submitBtn = document.getElementById('modalSubmitBtn');
                    submitBtn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Traitement...';
                    submitBtn.disabled = true;
                });
            }

            // Auto-dismiss des alertes après 5 secondes
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    setTimeout(() => bsAlert.close(), 5000);
                });
            }, 5000);

            // Initialiser la prévisualisation
            updatePreview();

            // Initialiser les étoiles à 5
            setRatingStars(5);
        });
    </script>
{% endblock %}